page{
  display: flex;
  flex-direction: column;
  background: #f6f6f6;
  color: #000000;
  height: 100%;
}

.content-info{
  height: 100%;
}

/**隐藏滚动条**/
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.content-info-slide{
  height: 400rpx;
  margin-bottom: 10px;
}

.content-info-slide image{
  width: 100%;
  height: 100%;
}

.content-info-portal{
  display: flex;
  font-size: 10pt;
  text-align: center;
  margin-top: 20rpx;
}

.content-info-portal > view{
  flex: 1;
  font-size: 10pt;
  text-align: center;
}

.content-info-portal image{
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin: 20rpx auto;
}

.bg-darkGray {
	background-color:  #f6f6f6;
	color:#ffffff;
}
.cu-bar .search-form {
  background-color:  #ffffff;
}
.cu-bar .search-form input{
  height: 100rpx;
}
.cu-bar .search-form{
  height: 90rpx;
}
.cu-bar{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
